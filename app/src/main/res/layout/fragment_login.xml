<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingHorizontal="@dimen/padding_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Login"
        android:textSize="100sp"
        android:fontFamily="@font/owl_cute"
        android:textColor="@color/colorBlurBlue"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginLabel"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:maxLength="30"
        android:hint="username"
        android:background="@drawable/corner_white_10dp"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:maxLines="1"
        android:maxLength="30"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/edtUsername"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:inputType="textPassword"
        android:hint="password"
        android:background="@drawable/corner_white_10dp"/>

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintStart_toStartOf="@id/edtPassword"
        app:layout_constraintEnd_toEndOf="@id/edtPassword"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/corner_blue_20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>