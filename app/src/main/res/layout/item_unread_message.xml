<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/unreadMessageContainer"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/d5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iconPeople"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvNamePeople"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/d5"
        android:paddingLeft="@dimen/padding_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconPeople"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iconPeople"
        tools:text="Hy Vu"/>

    <TextView
        android:id="@+id/tvUnreadMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNamePeople"
        android:paddingLeft="@dimen/padding_main"
        app:layout_constraintStart_toEndOf="@id/iconPeople"
        android:paddingTop="@dimen/d10"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Hello"
        android:maxLines="1"
        android:singleLine="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>